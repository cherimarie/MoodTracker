<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    

    <!--  Beach Theme  -->
    <style name="b_bg">
        <item name="android:background">@color/puce</item>
    </style>
    
     <style name="b_h1">
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textColor">@color/midnight</item>
    </style>
    
    <style name="b_h2">
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textColor">@color/midnight</item>
    </style>
    
    <style name="b_para">
        <item name="android:textSize">@dimen/para</item>
    </style>
    
    <style name="b_btn_go">
        <item name="android:textSize">@dimen/btn</item>
        <item name="android:background">@color/aqua</item>
    </style>
    
   <style name="b_btn_back">
        <item name="android:textSize">@dimen/btn</item>
        <item name="android:background">@color/teal</item>
    </style>
    
    <style name="b_btn_q">
        <item name="android:textSize">@dimen/btn</item>
        <item name="android:background">@color/salmon</item>
    </style>
    
   <style name="b_btn_other">
        <item name="android:textSize">@dimen/btn</item>
        <item name="android:background">@color/puce</item>
    </style>
    
    <style name="b_error">
        <item name="android:textSize">@dimen/para</item>
        <item name="android:textColor">@color/salmon</item>
    </style>
    
    

</resources>